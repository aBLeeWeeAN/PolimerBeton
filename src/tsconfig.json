{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["DOM", "ES6"],
        "forceConsistentCasingInFileNames": true,
        "types": ["node"],
        "moduleResolution": "node",
        "allowJs": false,
        "checkJs": false
    },
    "include": ["apps/**/static/**/ts/*.ts"],
    "exclude": ["node_modules"]
}

